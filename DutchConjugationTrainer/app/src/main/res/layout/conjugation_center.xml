<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ardeleanlucian.dutchconjugationtrainer.view.ConjugationCenter">

    <!-- Focus thief -->
    <View
        android:id="@+id/focus_thief"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <!-- App toolbar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <!-- Spinner dropdown -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null" />

        </android.support.v7.widget.Toolbar>

        <!-- Toolbar bottom contour -->
        <TextView
            android:id="@+id/toolbar_contour"
            android:layout_width="match_parent"
            android:layout_height="1.75sp"
            android:layout_gravity="bottom"
            android:background="@color/redish_orange"
            android:text=""
            tools:layout_editor_absoluteX="0dp" />

    </android.support.design.widget.AppBarLayout>

    <!-- Infinitive and translation -->
    <RelativeLayout
        android:id="@+id/upper_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="75dp">

        <!-- Verb in infinitive form -->
        <TextView
            android:id="@+id/infinitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:padding="3dip"
            android:text="infinitive"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Translation -->
        <TextView
            android:id="@+id/translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:padding="3dip"
            android:text="translation"
            android:textSize="24sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <!-- Conjugations -->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/conjugation_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="70dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/table_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="40dp"
            android:stretchColumns="1">

            <!-- 'ik' conjugation -->
            <TableRow>
                <TextView
                    android:id="@+id/ik"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="ik"
                    android:visibility="invisible"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/ik_verb_text"
                    android:padding="3dip"
                    android:text="ik_verb"
                    android:visibility="gone"
                    android:textSize="25sp"/>

                <!-- Hack-ish way to keep the edittext field size -->
                <!-- P.S. sorry mom! -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="777777777777777777777777777777777777777777777777777777777"
                        android:visibility="invisible"
                        />
                    <EditText
                        android:id="@+id/ik_verb_field"
                        android:layout_width="match_parent"
                        android:layout_marginRight="180dp"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:visibility="gone" />
                </FrameLayout>
            </TableRow>

            <!-- 'jij' conjugation -->
            <TableRow>
                <TextView
                    android:id="@+id/jij"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="jij"
                    android:visibility="invisible"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/jij_verb_text"
                    android:padding="3dip"
                    android:text="jij_verb"
                    android:visibility="gone"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/jij_verb_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:visibility="gone" />
            </TableRow>

            <!-- 'hij' conjugation -->
            <TableRow>
                <TextView
                    android:id="@+id/hij"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="hij/zij"
                    android:visibility="invisible"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/hij_verb_text"
                    android:padding="3dip"
                    android:text="hij_verb"
                    android:visibility="gone"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/hij_verb_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:visibility="gone" />
            </TableRow>

            <!-- 'wij' conjugation -->
            <TableRow>

                <TextView
                    android:id="@+id/wij"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="wij"
                    android:textSize="25sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/wij_verb_text"
                    android:padding="3dip"
                    android:text="wij_verb"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/wij_verb_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:visibility="gone" />
            </TableRow>

            <!-- 'jullie' conjugation -->
            <TableRow>
                <TextView
                    android:id="@+id/jullie"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="jullie"
                    android:visibility="invisible"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/jullie_verb_text"
                    android:padding="3dip"
                    android:text="jullie_verb"
                    android:visibility="gone"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/jullie_verb_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:visibility="gone" />
            </TableRow>

            <!-- 'zij' conjugation -->
            <TableRow>
                <TextView
                    android:id="@+id/zij"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="zij"
                    android:visibility="invisible"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/zij_verb_text"
                    android:padding="3dip"
                    android:text="zij_verb"
                    android:visibility="gone"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/zij_verb_field"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>
    </android.support.design.widget.CoordinatorLayout>

    <!-- Separator line -->
    <TextView
        android:id="@+id/lineSeparator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="58dp"
        android:background="@android:color/background_dark"
        android:text=""
        tools:layout_editor_absoluteX="0dp" />

    <!-- Bottom navigation -->
    <Button
        android:id="@+id/next"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="NEXT"
        android:visibility="gone" />

    <Button
        android:id="@+id/skip"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="SKIP" />

</android.support.design.widget.CoordinatorLayout>
